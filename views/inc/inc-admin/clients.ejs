<div class="clients-panel">
    <button class="modalBtn" title="Cria novo cliente">Novo</button>
</div>
<div class="modal">
    <div class="content">
        <div class="modal-header">
        </div>
        <div class="modal-body">
            <div class="modal-body-form">
                <form enctype="multipart/form-data">
                    <div class="data-form">
                        <div class="data-form-content">
                            <div class="data-form-one">
                                <div class="form-name">
                                    <label for="">Nome</label><input type="text" name="nome_cliente" placeholder="Nome" id="name" required>
                                </div>
                                <div class="form-whatsapp">
                                    <label for="">WhatsApp</label><input type="text" name="whatsapp_cliente" id="whatsapp">
                                </div>
                            </div>
                            <div class="data-form-two">
                                <div class="form-email">
                                    <label for="">E-mail</label><input type="email" name="email_cliente" id="email">
                                </div>
                                <div class="form-cpf">
                                    <label for="">CPF</label><input type="text" name="cpf_cliente" id="cpf">
                                </div>
                            </div>
                            <div class="data-form-three">
                                <div class="form-date">
                                    <label for="">Data de Cadastro</label><input type="date" name="dtcad_cliente" id="date">
                                </div>
                            </div>
                            <div class="data-form-four">
                                <div class="form-street">
                                    <label for="">Logradouro</label><input type="text" name="endereco_logradouro" id="street">
                                </div>
                                <div class="form-number">
                                    <label for="">Nº</label><input type="text" name="endereco_numero" id="number">
                                </div>
                            </div>
                            <div class="data-form-five">
                                <div class="form-district">
                                    <label for="">Bairro</label><input type="text" name="endereco_bairro" id="district">
                                </div>
                            </div>
                        </div>
                        <div class="data-form-image">
                            <div class="data-image-upload">
                                <img src="/img/no-photo.jpg" alt="">
                            </div>
                            <input type="file" name="foto_cliente" id="image">
                            <label for="">Foto do Cliente</label>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="modal-footer">
            <hr>
            <div class="modal-footer-buttons">
                <div class="clear-cancel">
                    <button id="clear-button">Limpar formulário</button>
                </div>
                <div class="save">
                    <button id="create-client-button">Criar</button>
                </div>
            </div>
        </div>
    </div>
</div>
<hr>

<div class="cards">
    <% clients.forEach(row=> { %>
    <a href="/admin/clients/<%= row.id_cliente %>" class="card" client-id="<%= row.id_cliente %>">
        <div class="card-img">
            <div class="circle">
                <img src="/img/uploads/<%= row.foto_cliente %>">
            </div>
        </div>
        <div class="card-details">
            <div class="card-details-content">
                <h4><%= row.nome_cliente %></h4>
                <% if (row.whatsapp_cliente) { %>
                <div class="whatsapp">
                    <div class="icon-whatsapp">
                        <p><i class="fa-brands fa-whatsapp"></i></p>
                    </div>
                    <p><%= row.whatsapp_cliente %></p>
                </div>
                <% } %>
            </div>
        </div>
        <div class="card-services">
            <p><%= row.quantidade_servicos %></p>
            <p>Serviços</p>
        </div>
    </a>
    <% }) %>
</div>
