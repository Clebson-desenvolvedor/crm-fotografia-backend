<div class="cards">
    <% clients.forEach(row=> { %>
    <a href="/admin/clients/<%= row.id_cliente %>" class="card" client-id="<%= row.id_cliente %>">
        <div class="card-img">
            <div class="circle">
                <img src="/img/uploads/<%= row.foto_cliente %>">
            </div>
        </div>
        <div class="card-details">
            <div class="card-details-content">
                <h4><%= row.nome_cliente %></h4>
                <% if (row.whatsapp_cliente) { %>
                <div class="whatsapp">
                    <div class="icon-whatsapp">
                        <p><i class="fa-brands fa-whatsapp"></i></p>
                    </div>
                    <p><%= row.whatsapp_cliente %></p>
                </div>
                <% } %>
            </div>
        </div>
        <div class="card-services">
            <p><%= row.quantidade_servicos %></p>
            <p>Serviços</p>
        </div>
    </a>
    <% }) %>
</div>

<div class="modal">
    <div class="content">
        <div class="modal-header"></div>
        <div class="modal-body">
            <div class="modal-body-form">
                <div class="campos-cliente form">
                    <div id="nome-cliente">
                        <div class="campo-dentro">
                            <label for="">Nome *</label>
                            <input type="text" name="nome-cliente" id="nome-cliente" value="">
                        </div>
                        <div class="mensagem-erro"><span></span></div>
                    </div>

                    <div id="whatsapp">
                        <div class="campo-dentro">
                            <label for="">WhatsApp *</label>
                            <input type="text" name="whatsapp" id="whatsapp" value="">
                        </div>
                        <div class="mensagem-erro"><span></span></div>
                    </div>

                    <div id="email">
                        <div class="campo-dentro">
                            <label for="">E-mail</label>
                            <input type="text" name="email" id="email" value="">
                        </div>
                        <div class="mensagem-erro"><span></span></div>
                    </div>

                    <div id="cpf">
                        <div class="campo-dentro">
                            <label for="">CPF</label>
                            <input type="text" name="cpf" id="cpf" value="">
                        </div>
                        <div class="mensagem-erro"><span></span></div>
                    </div>

                    <div id="dtcad_cliente">
                        <div class="campo-dentro">
                            <label for="">Data de Cadastro</label>
                            <input type="date" name="dtcad_cliente" id="dtcad_cliente" value="">
                        </div>
                        <div class="mensagem-erro"><span></span></div>
                    </div>

                    <fieldset id="endereco-cliente">
                        <legend>Endereço</legend>
                        <input type="text" placeholder="Rua, Avenida, etc" name="endereco-cliente-logradouro" id="endereco-cliente-logradouro" value="">
                        <input type="text" placeholder="Num" name="endereco-cliente-numero" id="endereco-cliente-numero" value="">
                        <input type="text" placeholder="Bairro" name="endereco-cliente-bairro" id="endereco-cliente-bairro" value="">
                    </fieldset>

                </div>
                    <div class="data-form-image-client">
                        <div class="data-image-upload">
                            <img src="/img/no-photo.jpg %>" alt="">
                            <input type="file" name="foto_cliente" id="image">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="modal-footer-buttons">
                <div class="clear-cancel">
                    <button id="clear-button">Limpar formulário</button>
                </div>
                <div class="save">
                    <button id="create-client-button">Criar</button>
                </div>
            </div>
        </div>
    </div>
</div>
