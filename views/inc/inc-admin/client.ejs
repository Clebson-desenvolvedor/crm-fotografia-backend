    <div class="content">
        <div class="modal-header">
        </div>
        <div class="modal-body">
            <div class="modal-body-form modal-servicos">
                <div id="form-servicos">
                    <div>
                        <label for="">Selecione o tipo de serviço</label>
                        <select name="select-service" id="select-service" required>
